{% extends "base.html.jinja" %}
{% block content %}
<div class="container-md">
    <div class="row">
        <h1>Task</h1>
    </div>
    <div class="row">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                aria-expanded="false">
                Sort
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="?sort=older">Older</a></li>
                <li><a class="dropdown-item" href="?sort=newer">Newer</a></li>
            </ul>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th width="10%" scope="col"></th>
                    <th width="20%" scope="col">Date</th>
                    <th scope="col">Program</th>
                    <th width="25%" scope="col">Location</th>
                </tr>
            </thead>
            <tbody>
                {% for task in tasks %}
                <tr>
                    <th scope="row">{{ task.type }}</th>
                    <td>{{ task.start_date_time | format_datetime('datetime') }} - {{ task.end_date_time | format_datetime('time') }}</td>
                    {% if task.name %}
                    <td>{{ task.name }}</td>
                    {% else%}
                    <td>?</td>
                    {% endif %}
                    {% if task.location %}
                    <td>{{ task.location.name }}</td>
                    {% else%}
                    <td>?</td>
                    {% endif %}
                </tr>
                {% endfor %}
                </tr>
            </tbody>
        </table>

    </div>
</div>
{% endblock content %}